@top Program { expression* }

@skip { space | LineComment }

expression {
  Number     |
  Identifier |
  String |
  Boolean |
  Block       { "[" expression* "]" } |
  Application { "(" expression* ")" }
}

@tokens {
  Number     { @digit+ }
  Identifier { @asciiLetter $[a-zA-Z_\-0-9]+ }
  String { '"' (!["\\] | "\\" _)* '"' }

  Boolean { "#t" | "#f" }

  LineComment { "//" ![\n]* }

  space { $[ \t\n\r]+ }

  "(" ")"
  "[" "]"
}

